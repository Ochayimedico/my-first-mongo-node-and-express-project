<%- include('../partials/head') %> 
    <title><%= product.name %></title>
  </head>
  <body>
    <section class="container w-70 p-3">
    <h1><%= product.name %></h1>
    <h3>Price($): <%=product.price %></h3>
    <h3>Category: <%=product.category %></h3>
    <form action="/products/<%=product._id%>?_method=DELETE" method="POST" novalidate>
      <button type="submit" class="btn btn-danger">Delete</button>
    </form>
    <br />
    <a class="btn btn-primary" href="/products">All Products</a>
    <a class="btn btn-primary" href="/products/<%=product._id%>/edit"
      >Edit Product</a
    >
  </body></section>
</html>
